/* Base */

*
  box-sizing: border-box
  -o-box-sizing: border-box
  -ms-box-sizing: border-box
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box


body
  background-color: $backgroundColor
  color: $baseColor
  overflow-x: hidden
  margin: 0
  padding: 0 
  font: $font
a
  color: #00B7FF


#link-home
  color: $secondaryColor
  font-size: 20px
  font-weight: 400
  text-decoration: none
  
#link-home-2
  color: $secondaryColor
  font-size: 20px
  font-weight: 300
  margin-left: 3px
  text-decoration: none




h2
  display: inline-block
  font-size: 1.75em

h3 
  font-size: 16px
  font-weight: 300
  margin: 0
  text-transform: uppercase


h4 
  font-size: 1.5em

p 
  line-height: 33px
  margin-bottom: $gutter

.content-title
  clear: both
  display: block
  margin: 20px 0

.tagline
  margin-left: 10px
  padding-top: 6px

#header
  background: url(../img/header-bg.jpg) repeat-x 0 0
  border-bottom: 1px solid $mainBorderColor
  height: 52px
  margin: 0
  padding: $gutterHalf $gutter

  .icon-chat
    color: $secondaryColor
    float: left
    font-size: $large
    padding: 0 0 0 8px

  .icon-share
    color: $secondaryColor
    float: right
    font-size: $large
    padding: 0 0 0 8px


  h1
    margin: 0
    padding: 0
 
    a 
      float: left

#testimonies
  list-style-type: none
  padding: 0
  margin: 0

  .description 
    ol, ul 
      margin: $gutterHalf $gutter 

    li 
      list-style-type: disc

  .new
    float: left
    line-height: 1px
    margin-left: 5px
    margin-top: 22px
    font-size: 4.0em

  > li 
    overflow: hidden
    padding: $gutter

    .subhead
      color: #1ABC9C
      float: left
      margin: 0 0 10px 0

    .description 
      clear: left
      float: left
      padding: 0
      color: rgba(#000, 0.8)
      width: 80%


    button 
      float: right

#content
  clear: both


/* Subnav */
#subnav

  #read
    margin-bottom: $gutterHalf

.hr-divider
  margin-top: $gutterHalf
  padding: $gutter
  position: relative

  .hr-line 
    background-color: #ccc
    height: 1px

  .hr-text
    background-color: $backgroundColor
    font-size: $large
    font-style: italic
    position: absolute
    top: $gutterHalf + 5
    width: $gutter * 2
    margin-left: -($gutter)



#subTitle-prefix
  color: $lightColor
  float: left
  margin-right: $gutterHalf

#subTitle
    float: left

    
#tagSelector
    float: left 
    padding: 2px

#tagSelector--tagCategory
    appearance: none
    border: none
    font-size: $medium
    margin-right: $gutterSmall
    margin: 0
    outline: none
    padding: 0
    text-transform: uppercase

#read
    display: inline

/* Buttons */
#start 
    color: $baseColor
    cursor: pointer
    font-size: $medium
    float: right

