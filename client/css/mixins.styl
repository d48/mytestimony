box-shadow(args...)
  -webkit-box-shadow args
  -moz-box-shadow args
  -ms-box-shadow args
  -o-box-shadow args
  box-shadow args

border-radius(args...)
  -webkit-border-radius: args
  -moz-border-radius: args
  -ms-border-radius: args
  -o-border-radius: args
  border-radius: args

placeholder()
    color: $placholderColor
    font-style: italic
    padding-top: 6px

input()
  background-color: $inputBackgroundColor
  border: none
  border-bottom: 1px solid $defaultFontColor
  display: block
  font: $font
  line-height: 18px
  margin: 0
  padding: 10px




