box-shadow(args...)
  -webkit-box-shadow args
  -moz-box-shadow args
  -ms-box-shadow args
  -o-box-shadow args
  box-shadow args

border-radius(args...)
  -webkit-border-radius: args
  -moz-border-radius: args
  -ms-border-radius: args
  -o-border-radius: args
  border-radius: args

input()
  background-color: $inputBackgroundColor
  border: 1px solid $mainBorderColor
  border-radius: 4px
  display: block
  font: $font
  font-size: 14px
  line-height: 18px
  margin: 0
  padding: 10px




