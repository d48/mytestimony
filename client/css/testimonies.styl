.home
    .view-testimony
        display: block
        margin: $gutterDouble 0

        .icon-arrow-right
            margin-left: $gutterHalf

.author
  font-weight: bold
  margin-top: -20px

#return
  text-decoration: underline

#testimony-detail
  margin-bottom: $gutter

#testimony-footer
  text-align: center;

  .tags
    margin: $gutterBig 0

  li 
    background-color: #f8f8f8
    border: 1px solid $mainBorderColor
    border-radius: 10px
    display: inline-block
    font-size: 0.9em
    padding: 2px 10px
    margin-right: 5px

    &:hover
      background-color: #ccc
      color: #777
      cursor: pointer


.flag
  float: left
  padding-left: $gutter
  padding-top: $gutterHalf
  width: 50%

  li 
    display: inline-block
    margin-right: 5px
    padding: 2px 5px

#heading
  width: 100%

  .title
    min-width: 200px
    text-align: center

    h3
      color: $baseColor
      font-size: $extraLarge
      font-weight: bold
      text-transform: none

  .share
    float: right 
    padding-left: $gutter
    width: 50%

    h5 
      margin-bottom: 20px 

    p 
      margin-top: 0

    li 
      display: inline-block
      margin-right: 5px
      padding: 2px 5px


#testimonies
  list-style-type: none
  padding: 0
  margin: 0

  .description 
    ol, ul 
      margin: $gutterHalf $gutter 

    li 
      list-style-type: disc

  .latest
    position: relative

  .new
    right: $gutterDouble + 20
    top: 38px
    color: $newColor
    font-size: $smallMedium
    font-weight: 400
    position: relative
    width: $gutterDouble

    .icon-dot
      font-size: $mediumLarge 
      position: absolute
      top: -1px

  > li 
    margin: $gutterBig 0 0 0


    .subhead
      color: $baseColor
      float: left
      font-size: 40px
      font-weight: 700
      margin: 0 0 $gutter 0
      text-transform: none

    .description 
      clear: both
      padding: 0
      color: rgba(#000, 0.8)



    button 
      float: right


