.home
    .view-testimony
        display: block
        margin: $gutterDouble 0

        .icon-arrow-right
            margin-left: $gutterHalf

.testimony
    .icon-arrow-left
        font-size: $medium
        margin-right: $gutterHalf

    #main 
        .colon
            margin: 0 $gutterHalf

.author
  color: $lightColor
  font-size: $smallMedium
  font-weight: 300
  text-transform: uppercase

  > div
    display: inline-block

  .name
    color: $tertiaryColor 

#return
  text-decoration: none

  &:hover
    text-decoration: underline

#testimony-detail
  margin-bottom: $gutter

#testimony-footer
  text-align: center;

  .tags
    color: $lightColor
    font-size: $smallMedium
    margin: $gutterBig 0

    .tags-list
        color: $tertiaryColor

        > a:first-child
            margin-left: 0 !important

        .label
            font-size: $medium 
            margin-left: $gutterSmall
            text-decoration: underline
            text-transform: none

    .colon
        margin: 0 $gutterHalf

    .title
        text-transform: uppercase

    > div
        display: inline-block

  li 
    background-color: #f8f8f8
    border: 1px solid $mainBorderColor
    border-radius: 10px
    display: inline-block
    font-size: 0.9em
    padding: 2px 10px
    margin-right: 5px

    &:hover
      background-color: #ccc
      color: #777
      cursor: pointer


.flag
  float: left
  padding-left: $gutter
  padding-top: $gutterHalf
  width: 50%

  li 
    display: inline-block
    margin-right: 5px
    padding: 2px 5px

#heading
  width: 100%

  .title
    min-width: 200px
    text-align: center

    h3
      color: $baseColor
      font-size: $extraLarge
      font-weight: bold
      line-height: 1
      margin-top: $gutterBig
      text-transform: none

  .share
    float: right 
    padding-left: $gutter
    width: 50%

    h5 
      margin-bottom: 20px 

    p 
      margin-top: 0

    li 
      display: inline-block
      margin-right: 5px
      padding: 2px 5px


#testimonies
  list-style-type: none
  padding: 0
  margin: 0

  .description 
    ol, ul 
      margin: $gutterHalf $gutter 

    li 
      list-style-type: disc

  .latest
    position: relative

  .new
    right: $gutterDouble + 20
    top: 38px
    color: $newColor
    font-size: $smallMedium
    font-weight: 400
    position: relative
    width: $gutterDouble

    .icon-dot
      font-size: $mediumLarge 
      position: absolute
      top: -1px

  > li 
    margin: $gutterBig 0 0 0

    &:last-child .divider
        display: none


    .subhead
      color: $baseColor
      float: left
      font-size: 40px
      font-weight: 700
      line-height: 1
      margin: 0 0 $gutter 0
      text-transform: none

    .description 
      clear: both
      padding: 0
      color: rgba(#000, 0.8)
      line-height: 1.5



    button 
      float: right


