$fontDisplay = 'sinkin_sans500_medium', Helvetica, sans-serif
$fontParagraph = Georgia, Times New Roman, serif
$small = 11px
$smallMedium = 14px
$medium = 16px
$mediumLarge = 20px
$large = 22px
$extraLarge = 50px
$sizeLarge = 32px

// colors
$baseColor            = #404041
$secondaryColor       = #464646
$tertiaryColor        = #262626
$backgroundColor      = #fff
$newColor             = #2ade75
$buttonColor          = #ffeeff
$buttonColorAlt       = #ccc
$buttonBorderColor    = gainsboro
$defaultFontColor     = #000
$lightColor           = #939393
$mainBorderColor      = #d9d9d9
$modalBackgroundColor = #000
