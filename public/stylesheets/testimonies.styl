.author
  font-weight: bold
  margin-top: -20px

#testimony-footer
  border-top: 1px solid $mainBorderColor

.tags
  border-right: 1px solid $mainBorderColor
  float: left
  width: 50%

  li 
    background-color: #f8f8f8
    border: 1px solid $mainBorderColor
    border-radius: 10px
    display: inline-block
    font-size: 0.9em
    padding: 2px 5px
    margin-right: 5px

    &:hover
      background-color: #ccc
      color: #777
      cursor: pointer

.share
  float: left
  padding-left: $gutter
  width: 50%

  li 
    display: inline-block
    margin-right: 5px
    padding: 2px 5px


.testimony
  ul
    list-style-type: none
    margin: 0
    padding: 0
    margin-top: -10px


