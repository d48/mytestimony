extends layout

block main 
    h3.latest Latest Testimonies

    ul#testimonies
        each testimony, index in testimonies
            if index === 0
                li.latest
                    h4= testimony.title
                    span.new *
                    p= testimony.description
                    button.view View
            else
                li
                    h4= testimony.title
                    p= testimony.description
                    button.view View


block sidebar
    h4#start Ready to share yours?

    button.start Start >

    h4#or Or

    h4#read Read some Testimonies

    select#tag-category
        option(value='0') Select a tag/category
        option(value='Jesus') Jesus
        option(value='Holy Spirit') Holy Spirit
        option(value='drugs') drugs
        option(value='alcohol') alcohol 

    
